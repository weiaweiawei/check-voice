{
  "compilerOptions": {
    "target": "ES2020", // 或 ESNext
    "module": "ESNext", // 适合浏览器
    "moduleResolution": "node", // 保持为 node
    "lib": ["ES2020", "DOM"], // 包含需要的库
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./",
    "allowJs": true,
  },
  "include": ["src/**/*.ts","types/**/*.ts"],
}
